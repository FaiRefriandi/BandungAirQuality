<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:elevation="4dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_medium"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:text="Informasi Kualitas Udara" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/open_regular"
            android:layout_marginBottom="2dp"
            android:text="0-50: Baik" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/open_regular"
            android:layout_marginBottom="2dp"
            android:text="51-100: Sedang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/open_regular"
            android:layout_marginBottom="2dp"
            android:text="101-150: Tidak Sehat (Untuk beberapa orang)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/open_regular"
            android:layout_marginBottom="2dp"
            android:text="151-200: Tidak Sehat (Untuk semua orang)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/open_regular"
            android:layout_marginBottom="2dp"
            android:text="201-300: Sangat Tidak Sehat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_regular"
            android:textSize="13sp"
            android:layout_marginBottom="2dp"
            android:text="301-500: Berbahaya" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
